<div class="text-center">
  {{!-- <h3>Dashboard</h3> --}}
  <h6>Welcome {{name}}</h6>

    <div class="col-md-6">
    <h5>Create a New Post:</h5>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post-name">New Post:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Text:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>


  {{#each posts as |post|}}
  <div class="card">
    <h5>{{post.title}}</h5>
    <p>{{post.content}}</p>
    <p>{{post.date_created}}</p>
  </div>

  {{/each}}
</div>


