{{#each posts as |item|}}
<div class="col s12 m6">
  <div class="card">
    <div class="card-content grey-text">
      <span class="card-title"><a href="/post/{{item.id}}">{{item.title}}</a></span>
        <h6 href="#" class="grey-text">Posted By: {{item.user.name}}</h6>
        <p class="black-text">{{item.content}}</p>
    </div>
    <div class="card-action right-align grey lighten-5">
      {{!-- <a href="#" class="black-text center-align">Posted By: {{user.name}}</a> --}}
      <a href="#" class="black-text center-align"> Post Date: {{format_date date_created}}</a>
    </div>
  </div>
</div>
{{/each}}





